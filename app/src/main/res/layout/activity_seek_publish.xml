<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/actionbar">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:background="@color/color_transparent_bg"
            android:scaleType="center"
            android:src="@mipmap/icon_back_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布丢失"
            android:layout_centerInParent="true"
            android:textSize="@dimen/actionBar_textSize"
            android:textColor="@color/base_color_text_white"/>
        <Button
            android:id="@+id/publish"
            android:background="@null"
            android:textSize="@dimen/actionBar_textSize"
            android:textColor="@color/base_color_text_white"
            android:text="发布"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@mipmap/seek_scan_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:text="宠物:"/>
                <Spinner
                    android:id="@+id/petName"
                    android:spinnerMode="dialog"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="80dp"
                    android:paddingLeft="50dp"
                    android:background="@mipmap/seek_editview_bg"
                    android:layout_width="wrap_content">

                </Spinner>
                <!--<EditText-->

                <!--android:background="@mipmap/seek_editview_bg"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="80dp"-->
                <!--android:paddingLeft="50dp"-->
                <!--android:text="我的宝贝"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_marginRight="20dp"/>-->
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:text="地点:"/>
                <EditText
                    android:maxLines="1"
                    android:id="@+id/address"
                    android:background="@mipmap/seek_editview_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:text="天津大学"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:text="时间:"/>
                <EditText
                    android:maxLines="1"
                    android:id="@+id/time"
                    android:background="@mipmap/seek_editview_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:paddingLeft="50dp"
                    android:hint="如:2016-04-06"
                    android:text="2016-4-6"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:text="电话:"/>
                <EditText
                    android:maxLines="1"
                    android:id="@+id/phone"
                    android:inputType="phone"
                    android:background="@mipmap/seek_editview_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:paddingLeft="50dp"
                    android:text="18322134412"
                    android:maxLength="11"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:text="描述:"/>
                <EditText
                    android:id="@+id/msg"
                    android:background="@mipmap/seek_publish_content_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:padding="20dp"
                    android:maxLines="3"
                    android:gravity="start"
                    android:text="黑黑的，都是毛"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>