<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_color_text_white"
    tools:context="com.example.administrator.getpet.ui.Me.AddPetActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="@color/actionbar">

    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:background="@color/color_transparent_bg"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:src="@mipmap/icon_back_white"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/actionBar_textSize"
        android:text="我的宠物"
        android:textColor="@color/base_color_text_white"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="@color/base_color_text_white"
        android:text="完成"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/TextView_textSize"
                android:text="宠物名："/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/register_et_bg"
                android:gravity="center">

                <EditText
                    android:id="@+id/et_pet_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/color_transparent_bg"
                    android:textSize="@dimen/editText_textSize"
                    android:singleLine="false"
                    android:maxLength="15"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/TextView_textSize"
                android:text="宠物年龄："/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/register_et_bg"
                android:gravity="center">

                <EditText
                    android:id="@+id/et_pet_age"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/color_transparent_bg"
                    android:textSize="@dimen/editText_textSize"
                    android:singleLine="false"
                    android:inputType="number"
                    android:maxLength="2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/TextView_textSize"
                android:text="宠物性格："/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/register_et_bg"
                android:gravity="center">

                <EditText
                    android:id="@+id/et_pet_character"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/color_transparent_bg"
                    android:textSize="@dimen/editText_textSize"
                    android:singleLine="false"
                    android:maxLength="15"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/TextView_textSize"
                android:text="宠物类别："/>

            <Spinner
                android:id="@+id/sp_pet_category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textAlignment="center" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/iv_pet_photo"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <ImageButton
                android:id="@+id/ib_pet_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/color_transparent_bg"
                android:src="@mipmap/add_picture"
                android:scaleType="fitCenter"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
