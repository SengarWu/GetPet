<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/actionbar">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:background="@color/color_transparent_bg"
            android:scaleType="center"
            android:src="@mipmap/icon_back_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动"
            android:layout_centerInParent="true"
            android:textSize="@dimen/actionBar_textSize"
            android:textColor="@color/base_color_text_white"/>
        <Button
            android:id="@+id/save"
            android:background="@null"
            android:textSize="@dimen/actionBar_textSize"
            android:textColor="@color/base_color_text_white"
            android:text="保存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@mipmap/seek_scan_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:text="开始时间:"/>
                <EditText
                    android:maxLines="1"
                    android:id="@+id/startTime"
                    android:background="@mipmap/seek_editview_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:paddingLeft="50dp"
                    android:hint="未设置名称"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:text="结束时间:"/>
                <EditText
                    android:maxLines="1"
                    android:id="@+id/endTime"
                    android:background="@mipmap/seek_editview_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:hint="未设置地点"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:text="描&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;述:"/>
                <EditText
                    android:id="@+id/msg"
                    android:background="@mipmap/seek_publish_content_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:padding="20dp"
                    android:maxLines="3"
                    android:gravity="top"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>