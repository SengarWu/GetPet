<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_color_text_white"
    tools:context="com.example.administrator.getpet.ui.Login.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/actionbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/actionBar_textSize"
            android:text="登录"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="救助站登录入口"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/logo" />

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_below="@+id/iv_logo"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@mipmap/register_et_bg">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:textSize="@dimen/editText_textSize"
                    android:textColorHint="@color/base_color_text_gray"
                    android:textColor="@color/base_color_text_black"
                    android:hint="请输入手机号" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_below="@+id/ll1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@mipmap/register_et_bg">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:maxLength="16"
                    android:inputType="textPassword"
                    android:textSize="@dimen/editText_textSize"
                    android:textColorHint="@color/base_color_text_gray"
                    android:textColor="@color/base_color_text_black"
                    android:hint="请输入密码"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/ib_login_register"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/ll2"
                android:layout_alignLeft="@+id/ll2"
                android:background="@color/color_transparent_bg"
                android:src="@mipmap/register_icon"
                android:scaleType="fitCenter"/>


            <ImageButton
                android:id="@+id/ib_login"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_transparent_bg"
                android:src="@mipmap/login_login"
                android:scaleType="fitCenter"
                android:layout_below="@+id/ll2"
                android:layout_alignRight="@+id/ll2"/>

            <ImageButton
                android:id="@+id/ib_find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_transparent_bg"
                android:src="@mipmap/login_password"
                android:layout_below="@+id/ib_login"
                android:layout_alignRight="@+id/ib_login"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
