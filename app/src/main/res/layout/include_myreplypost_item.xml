<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.example.administrator.getpet.view.RoundImageView
                android:src="@mipmap/icon_dog"
                android:id="@+id/user_head"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:id="@+id/username"
                android:textSize="@dimen/TextView_textSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_title_kk"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/title"
                        android:textSize="@dimen/TextView_textSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/TextView_textSize"
                    android:textColor="@color/pink_KK"
                    android:layout_alignParentRight="true"
                    android:id="@+id/Reaplyresult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:background="@drawable/multi_textview_border"
                android:singleLine="false"
                android:layout_marginLeft="5dp"
                android:textColor="@color/KK_white"
                android:id="@+id/content_summary"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <TextView
                android:textSize="@dimen/TextView_textSize"
                android:id="@+id/state"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/TextView_textSize"
                android:id="@+id/seeNum"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/TextView_textSize"
                android:id="@+id/replyNum"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="30dp">
            <ImageView
                android:src="@mipmap/reputation"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/award"
                android:layout_width="50dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_time"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/publishTime"
                android:textSize="@dimen/TextView_textSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>