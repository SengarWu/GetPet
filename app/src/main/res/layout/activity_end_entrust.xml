<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.getpet.ui.Home.SendAdopt.endEntrust">
    <RelativeLayout
        android:background="@color/KK_theme_color"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/back"
            android:src="@mipmap/kk_back"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="22sp"
            android:textColor="@color/KK_white"
            android:gravity="center"
            android:text="领养了宠物的用户"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="120dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.example.administrator.getpet.view.RoundImageView
                android:src="@mipmap/icon_dog"
                android:id="@+id/user_head"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:id="@+id/username"
                android:textSize="@dimen/TextView_textSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/TextView_textSize"
                        android:text="职业:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/occupation"
                        android:textSize="@dimen/TextView_textSize"
                        android:text="police"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/TextView_textSize"
                    android:text="年龄:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/age"
                    android:textSize="@dimen/TextView_textSize"
                    android:text="police"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/TextView_textSize"
                    android:text="电话:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/phonenumber"
                    android:textSize="@dimen/TextView_textSize"
                    android:text="police"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/TextView_textSize"
                    android:text="信誉度:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/reputation"
                    android:textSize="@dimen/TextView_textSize"
                    android:text="police"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="25sp"
        android:textColor="@color/KK_theme_color"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:text="申请"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/KK_white"
        android:background="@drawable/multi_textview_border"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/editText_textSize"
        android:layout_marginRight="5dp"
        android:id="@+id/apply_message"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:text="我的评价："
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    <ImageView
        android:id="@+id/comment"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="50dp" />
    </LinearLayout>
    <Button
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:id="@+id/giveComment"
        android:layout_marginLeft="5dp"
        android:text="评价"
        android:textSize="@dimen/btn_size"
        android:textColor="@color/KK_white"
        android:background="@drawable/btn_style"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />
</LinearLayout>
