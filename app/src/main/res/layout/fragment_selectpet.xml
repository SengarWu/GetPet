<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@mipmap/bg_selectpetdraw"
    tools:context=".ui.Home.SendAdopt.Fragment.selectpet_fragment">
    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@color/KK_white"
        android:layout_marginLeft="120dp"
        android:text="在此可以选择宠物类型"
        android:textSize="35sp"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cat"
            android:background="@mipmap/cat_type"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/dog"
            android:layout_marginTop="15dp"
            android:background="@mipmap/type_dog"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/fish"
            android:layout_marginTop="15dp"
            android:background="@mipmap/type_fish"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/other"
            android:layout_marginTop="15dp"
            android:background="@mipmap/type_other"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/alltype"
            android:layout_marginTop="15dp"
            android:textSize="55sp"
            android:text="ALL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>