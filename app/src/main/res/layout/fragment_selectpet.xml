<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@mipmap/bg_selectpetdraw"
    tools:context=".ui.Home.SendAdopt.Fragment.selectpet_fragment">
    <LinearLayout
        android:layout_marginRight="80dp"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@mipmap/cat_type"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <ImageView
            android:layout_marginTop="15dp"
            android:background="@mipmap/type_dog"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <ImageView
            android:layout_marginTop="15dp"
            android:background="@mipmap/type_fish"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <ImageView
            android:layout_marginTop="15dp"
            android:background="@mipmap/type_other"
            android:layout_width="120dp"
            android:layout_height="120dp" />
    </LinearLayout>
</LinearLayout>