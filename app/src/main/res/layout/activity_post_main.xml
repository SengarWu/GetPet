<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.getpet.ui.Home.PetCircle.PostMainActivity">
    <RelativeLayout
        android:background="@color/KK_theme_color"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/back"
            android:src="@mipmap/kk_back"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="22sp"
            android:textColor="@color/KK_white"
            android:gravity="center"
            android:text="宠物圈圈"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:id="@+id/my_post"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="我的帖子"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@mipmap/bone"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/look_post"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="看帖"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@mipmap/bone"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/look_pet"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="看宠物"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@mipmap/bone"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
</LinearLayout>
