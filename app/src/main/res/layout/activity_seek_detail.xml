<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/actionbar">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:background="@color/color_transparent_bg"
            android:scaleType="center"
            android:src="@mipmap/icon_back_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:layout_centerInParent="true"
            android:textSize="@dimen/actionBar_textSize"
            android:textColor="@color/base_color_text_white"/>
        <ImageView
            android:id="@+id/handlerPhoto"
            android:background="@mipmap/seek_attention_add"
            android:textColor="@color/base_color_text_white"
            android:text="回复"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <!--android:background="@mipmap/seek_publish_content"-->
    <LinearLayout
        android:background="@mipmap/seek_scan_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:id="@+id/loserPhoto"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:src="@mipmap/boy"
                android:layout_height="100dp" />
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/loserPhoto"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发布时间:"/>
                    <EditText
                        android:enabled="false"
                        android:id="@+id/publishTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2012-1-1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="失主:"/>
                    <EditText
                        android:id="@+id/loser"
                        android:enabled="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="曹林"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话:"/>
                    <EditText
                        android:enabled="false"
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345678910"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="15dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/petPhoto"
                android:layout_alignParentLeft="true"
                android:layout_width="100dp"
                android:src="@mipmap/boy"
                android:layout_height="100dp" />
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/petPhoto"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名称:"/>
                    <EditText
                        android:enabled="false"
                        android:id="@+id/petName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小帽子"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特征:"/>
                    <EditText
                        android:enabled="false"
                        android:id="@+id/petMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身上全是毛，跟个猴子似的小狗子"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="丢失时间:"/>
                <EditText
                    android:enabled="false"
                    android:id="@+id/loseTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2012-1-1"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="丢失地点:"/>
                <EditText
                    android:enabled="false"
                    android:id="@+id/loseAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="曹林"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:text="其他信息:"/>
            <EditText
                android:enabled="false"
                android:id="@+id/loseMsg"
                android:layout_marginTop="10dp"
                android:background="@mipmap/seek_publish_content_bg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:padding="20dp"
                android:gravity="start"
                android:text="天津理工大学"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>