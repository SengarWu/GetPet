<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.getpet.ui.Home.PetCircle.Adapter.mypostAdapter">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageView
                android:layout_marginLeft="3dp"
                android:src="@mipmap/icon_title_kk"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginLeft="3dp"
                android:layout_marginTop="7dp"
                android:id="@+id/title"
                android:textSize="@dimen/TextView_textSize"
                android:layout_width="160dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/ic_time"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/publishTime"
                android:textSize="@dimen/TextView_textSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:background="@drawable/multi_textview_border"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/mes"
        android:textSize="@dimen/TextView_textSize"
        android:textColor="@color/KK_white"
        android:singleLine="false"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/TextView_textSize"
                android:id="@+id/state"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/TextView_textSize"
                android:id="@+id/seeNum"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/TextView_textSize"
                android:id="@+id/replyNum"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/reputation"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/award"
                android:layout_width="50dp"
                android:layout_height="20dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
